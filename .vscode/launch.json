    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Java current file",
            "request": "launch",
            "mainClass": "${file}",
            "args": [
                "-input"
            ],
            "console": "integratedTerminal"
        },
        {
            "type": "java",
            "name": "PlSqlTranslatorApp",
            "request": "launch",
            "mainClass": "org.vxs.translator.PlSqlTranslatorApp",
            "projectName": "vxs-plsql-translator"
        },
        {
            "name": "Launch JassToTs C#",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-c#",
            "program": "${workspaceFolder}/VXsPlSqlTranslator/bin/Debug/net7.0/VXsPlSqlTranslator.exe",
            "args": [
                "-c",
                "config.json"
            ],
            "cwd": "${workspaceFolder}/VXsPlSqlTranslator",
            "console": "integratedTerminal",
            "stopAtEntry": false
        }
    ]
}